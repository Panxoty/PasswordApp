<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.sfsoft.agenda"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
            android:minSdkVersion="10"
            android:targetSdkVersion="18"/>

    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_contacts"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity
                android:name="org.sfsoft.agenda.MainActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="org.sfsoft.agenda.NuevoContacto"
                android:label="@string/title_activity_nuevo_contacto">
        </activity>
        <activity
                android:name="org.sfsoft.agenda.Preferencias"
                android:label="@string/title_activity_preferencias">
        </activity>
    </application>

</manifest>
